{
  "compilerOptions": {
    "lib": ["esnext"],
    "types": ["node"],
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./.ts",
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  }
}
